{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "RubixKube Docs",
  "colors": {
    "primary": "#1E3A8A",  
    "light": "#3B82F6",    
    "dark": "#1E40AF"     
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "installation",
              "development"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/overview",
              "concepts/sri",
              "concepts/agent-mesh",
              "concepts/memory-engine",
              "concepts/guardrails"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/kubernetes",
              "integrations/gitops",
              "integrations/observability",
              "integrations/cloud-providers"
            ]
          },
          {
            "group": "Troubleshooting",
            "pages": [
              "troubleshooting/common-issues",
              "troubleshooting/faq"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "api/introduction"
            ]
          },
          {
            "group": "CLI Reference",
            "pages": [
              "api/cli/overview",
              "api/cli/connect",
              "api/cli/observe",
              "api/cli/autofix"
            ]
          },
          {
            "group": "REST Endpoints",
            "pages": [
              "api/rest/get-status",
              "api/rest/submit-incident",
              "api/rest/resolve",
              "api/rest/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Docs",
          "href": "https://rubixkube.ai/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://rubixkube.ai/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/rubixkube-light.svg",
    "dark": "/logo/rubixkube-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@rubixkube.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://rubixkube.ai/get-started"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/RubixKubeHQ",
      "github": "https://github.com/rubixkube-io",
      "linkedin": "https://linkedin.com/company/rubixkube"
    }
  }
}